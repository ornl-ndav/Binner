SHELL = /bin/sh
                                                                                          
RM = /bin/rm
AR = ar cq
                                                                                          
TOP = ..
C++ = g++
CC  = gcc

ifeq ($(BUILD),debug)
CCFLAGS := -ggdb
else
CCFLAGS := -O3
#CCFLAGS := -pg
endif

#INCLUDE = -I. -I$(TOP)/include -I$(TOP)/vcb/include -I/usr/include/GL
INCLUDE = -I. -I$(TOP)/include -I$(TOP)/vcb/include -I/System/Library/Frameworks/OpenGL.framework/Versions/A/Headers -I/System/Library/Frameworks/GLUT.framework/Versions/A/Headers 

LIB_PATH = -L$(TOP)/vcb/lib -L/usr/lib64
#LIB_PATH = -L$(TOP)/vcb/lib -L/System/Library/Frameworks/OpenGL.framework/Versions/A/Libraries -L/sw/lib

LIBS = -lvcbwithgl -lGLU -lGL -lglut -lm

OBJS = binner.o binnerio.o bslicer.o cell.o  clip.o clip3d.o  compvol.o gencell.o pix2mesh.o geometry.o rebin.o rot3d.o scale3d.o tran3d.o volume.o voxelize.o formain.o seeall.o seepara.o

EXES = seeall seepara

.SUFFIXES: .cc .c .cpp

.cc.o:
	$(C++) $(CCFLAGS) $(INCLUDE) -c $<

.cpp.o:
	$(C++) $(CCFLAGS) $(INCLUDE) -c $<

.c.o:
	$(CC) $(CCFLAGS) $(INCLUDE) -c $<

all: $(EXES)

seeall: seeall.o formain.o binnerio.o
	$(C++) -o $@ $^ $(LIB_PATH) $(LIBS)

seepara: seepara.o formain.o cell.o binnerio.o
	$(C++) -o $@ $^ $(LIB_PATH) $(LIBS)
	
install: all
	mv $(EXES) $(TOP)/bin

clean:
	rm -f $(OBJS) $(EXES) *.a *~
